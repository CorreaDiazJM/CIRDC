        <form action="/documentos/ingresar" class="formC" method="post">
            <div class="form_div">
                <div class="form_div_div">
                    <h2 class="login">Ingresar Documento</h2>
    
                    <% if (error) { %>
                        <strong><%= error %></strong>
                        <br>
                    <% } %>

                    <label for="titulo">
                        <input type="text" name="titulo" id="titulo" class="input inname" placeholder="TÃ­tulo" required>
                    </label>
                    <br>

                    <label for="contenido" class="passLabel">
                        <textarea name="contenido" id="contenido" cols="30" rows="10" class="input inpass" required></textarea>
                    </label>
    
                    <button type="submit" class="loginButton">Crear Documento</button>
    
                    <button class="loginButton"><a href="/documentos">Cancelar</a></button>
                </div>
            </div>
        </form>
    </body>
